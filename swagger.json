{
    "openapi": "3.0.0",
    "info": {
        "title": "Movie list",
        "description": "API developed for Creathus challenge",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000/api/v1",
            "description": "API test"
        }
    ],
    "paths": {
        "/movie/create": {
            "post": {
                "summary": "Create Movie",
                "description": "Rota reponsável pela criação de um filme",
                "tags": [
                    "Movie"
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "base64"
                                    },
                                    "title": {
                                        "type": "string"
                                    },
                                    "duration": {
                                        "type": "integer",
                                        "format": "int32"
                                    },
                                    "releaseYear": {
                                        "type": "integer",
                                        "format": "int32"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "author": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Bad Request"
                    },
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "$ref": "#/components/schemas/Movie"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/movie/find-many": {
            "get": {
                "summary": "Find many movies (with paginate)",
                "description": "Rota reponsável por buscar todos os filmes com paginação",
                "tags": [
                    "Movie"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "string"
                                                    },
                                                    "title": {
                                                        "type": "string"
                                                    },
                                                    "releaseYear": {
                                                        "type": "integer",
                                                        "format": "int32"
                                                    },
                                                    "MovieImage": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "string"
                                                            },
                                                            "url": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationObject"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "duration": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "releaseYear": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "description": {
                        "type": "string"
                    },
                    "created_ad": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "PaginationObject": {
                "properties": {
                    "currentPage": {
                        "type": "number",
                        "format": "int32"
                    },
                    "total": {
                        "type": "number",
                        "format": "int32"
                    },
                    "numberPages": {
                        "type": "number",
                        "format": "int32"
                    },
                    "perPage": {
                        "type": "number",
                        "format": "int32"
                    }
                }
            }
        }
    }
}